@model BlogEngine.ViewModels.HomeViewModel
@{ ViewData["Title"] = "Index"; }

@*Categories*@
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>
                Categories
            </h2>
        </div>
        <div class="col-2">
            <a asp-controller="Categories" asp-action="Create" class="btn-outline-success btn">Add</a>
        </div>
        <div class="col-4">

        </div>
    </div>
</div>
<hr />
<div class="container">
    @foreach (var category in Model.Categories)
    {
<a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">@category.Title</a><br />}
</div>
<br />
<br />
<br />

@*Posts*@
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>
                Posts
            </h2>
        </div>
        <div class="col-2">
            <a asp-controller="Posts" asp-action="Create" class="btn-outline-success btn">Add</a>
        </div>
        <div class="col-4">

        </div>
    </div>
</div>
<hr />

<div class="container">
    @foreach (var post in Model.Posts)
    {
<a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id">@post.Title</a><br />}
</div>